<!-- サクセスメッセージを表示 -->
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<%= render 'users/userinfo',user: @user, book: @book %>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @user.books.each do |book| %>
    <tr>
    <td>
      <%= link_to attachment_image_tag(book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg"), book.user %>
    </td>
    <td>
      <%= link_to book.title, book_path(book.id) %>
    </td>
    <td>
      <%= book.body %>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>