<!-- 新規投稿処理の成功後、サクセスメッセージを表示、テキストの色指定なし（黒） -->
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<!-- 部分テンプレート化する - ここから -->
<!--bookのindexページの左側の作成(User info) - 他ページのテンプレート（User info） -->
<h1>User info</h1>
<!--form_with部分-->
<%= form_with model: @user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
  <!--エラーが返るため一時的にコメントアウト-->
  <!--< %= attachment_image_tag profile_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>-->
  <label for="inputImage">Image</label>
  <!--エラーが返るため一時的にコメントアウト-->
  <!--< %= f.attachment_field :profile_image %>-->
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction, placeholder:"Introduction" %>

  <%= f.submit 'Update User' %>
<% end %>

<!-- bookの投稿フォーム - 他ページのテンプレート（New book）-->
<h2>New book</h2>
<!-- 処理失敗時にエラーメッセージを表示 -->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<!-- 部分テンプレート化する - ここまで-->

<!-- form_with部分 -->
<%= form_with model:@book.user, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<div class="create-book">
<%= f.submit 'Create Book' %>
</div>

<% end %>

<h1>Book detail</h1>

<table>
  <tbody>
    <td>
      <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
    </td>

    <td>
      <%= link_to @book.user.name, books_path(@book.id) %>
    </td>

    <td>
      <%= link_to @book.title, book_path(@book.id) %>
    </td>

    <td>
      <%= @book.body %>
    </td>

    <td>
      <%= link_to "Edit", edit_book_path(@book.id) %>
      <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
    </td>
    </tr>
  </tbody>
</table>