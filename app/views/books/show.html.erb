<!-- サクセスメッセージを表示 -->
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<%= render 'users/userinfo',user: @user, book: @book %>

<h2>Book detail</h2>

<table>
  <tbody>
    <td>
      <%= link_to attachment_image_tag(@book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg"), @book.user %>
    </td>

    <td>
      <%= link_to @book.user.name, @book.user %>
    </td>

    <td>
      <%= link_to @book.title, book_path(@book.id) %>
    </td>

    <td>
      <%= @book.body %>
    </td>

    <td>
    <% if @book.user.id == current_user.id %>
      <%= link_to "Edit", edit_book_path(@book.id) %>
      <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
    <% end %>
    </tr>
  </tbody>
</table>