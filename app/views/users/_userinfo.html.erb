<!-- 部分テンプレート -->
<!-- userの情報（User info）-->
<h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
<label for="Name">Name</label>
  <%= user.name %>
<label for="Introduction">Introduction</label>
  <%= user.introduction %>
<% if user.id == current_user.id %>
  <%= link_to "edit", edit_user_path(user) %>
<% end %>

<!-- bookの投稿フォーム（New book）-->
<h2>New book</h2>
<!-- 処理失敗時にエラーメッセージを表示 -->
<% if @newbook.errors.any? %>
  <%= @newbook.errors.count %> errors prohibited this book from being saved:
  <% @newbook.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<!-- form_with部分 -->
<%= form_with model: @newbook, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<div class="create-book">
<%= f.submit 'Create Book' %>
</div>

<% end %>