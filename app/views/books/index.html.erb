<!-- 削除処理の成功後、サクセスメッセージを表示、テキストの色指定なし（黒） -->
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<!--bookのindexページの左側の作成(User info) - 他ページのテンプレート（User info） -->
<h2>User info</h2>
  <%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
  <label for="Name">Name</label>
  <%= current_user.name %>
  <label for="Introduction">Introduction</label>
  <%= current_user.introduction %>
  <%= link_to "edit", edit_user_path(current_user) %></p>

<!-- bookの投稿フォーム - 他ページのテンプレート（New book）-->
<h2>New book</h2>
<!-- 処理失敗時にエラーメッセージを表示 -->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<div class="create-book">
<%= f.submit 'Create Book' %>
</div>

<% end %>

<!--bookのindexページの右側の作成(Books)-->
<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
    <td>
      <!-- 「, users_path」の部分について、usersのshowに飛びたい（users/1） -->
      <%= link_to attachment_image_tag(book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg"), users_path %>
    </td>
    <td>
      <%= link_to book.title, book_path(book.id) %>
    </td>
    <td>
      <%= book.body %>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>