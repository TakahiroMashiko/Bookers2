<%= render 'users/userinfo',user: @user, book: @book %>

<!-- bookの投稿フォーム - 他ページのテンプレート（New book）-->
<h2>New book</h2>

<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<div class="create-book">
<%= f.submit 'Create Book' %>
</div>

<% end %>

<h2>Users</h2>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>

<tbody>
    <% @users.each do |user| %>
    <tr>
    <td>
      <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
    </td>
    <td>
      <%= user.name %>
    </td>
    <td>
      <%= user.introduction %>
    </td>
    <td>
      <%= link_to "Show", user_path(user.id) %>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>