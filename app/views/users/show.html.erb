<h2>User info</h2>
<!--form_with部分-->
<%= form_with model: @user, local:true do |f| %>
  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
  <label for="Name">Name</label>
  <%= current_user.name %>
  <label for="Introduction">Introduction</label>
  <%= current_user.introduction %>
<% end %>
<% if @user.id == current_user.id %>
  <p><%= link_to "edit", edit_user_path(@user) %></p>
<% end %>

<h2>Books</h2>
<tbody>
    <% @user.books.each do |book| %>
    <tr>
    <td>
      <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
    </td>
    <td>
      <%= link_to book.title, book_path(book.id) %>
    </td>

    <td>
      <%= book.body %>
    </td>
    </tr>
    <% end %>
  </tbody>